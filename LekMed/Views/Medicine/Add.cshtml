@model MedicineViewModel

@{
    ViewData["Title"] = "Medicine Page";
}

<form asp-controller="Medicine" asp-action="Add">
    Name: <input type="text" name="Name" /> <br/>
    Company name: <input type="text" name="CompanyName" /> <br />
    Active substance: <input type="text" name="ActiveSubstance" /> <br />
    Weight: <input type="number" name="Weight" /> <br />
    Price: <input type="number" name="Price" /> <br />
    Amount: <input type="number" name="Amount" /> <br />
    Expiration date:<input type="date" name="ExpirationDate" /> <br />
    <button type="submit" class="btn btn-success">Add</button>
</form>
